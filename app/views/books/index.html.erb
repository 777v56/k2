<!DOCTYPE html>
<html>
<body>
  <div class="text-success">
  <%= flash[:notice] %>
</div>
<h1>Books</h1>
<table>
  <tr>
    <th align="center">Title</th>
    <th align="center">Body</th>
    <th colspan="3"></th>
  </tr>
  <tbody>
    <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %><br>

  Title<br>
  
  <%= f.text_field :title %><br>
  
  Body<br>
  
  <%= f.text_area :body %><br>
  
	  <%= f.submit 'Create Book' %>
	  
<% end %>
</body>
</html>