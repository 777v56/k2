<h1>Books</h1>

<% @books.each do |book| %>

  <span><%= link_to book.title, book_path(book.id) %></span>
  
<% end %>

<h2>New book</h2>

<%= form_with model: @book do |f| %><br>

  Title<br>
  
  <%= f.text_field :title %><br>
  
  Body<br>
  
  <%= f.text_area :body %><br>
  
	  <%= f.submit 'Create Book' %>
	  
<% end %>